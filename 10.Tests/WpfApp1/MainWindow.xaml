<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" 
        Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
            <TextBlock Text="Data 1:" />
            <TextBox x:Name="txtData1" Width="150" Text="{Binding Data1, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Data 2:" />
            <TextBox x:Name="txtData2" Width="150" Text="{Binding Data2, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Total:" />
            <TextBox x:Name="txtTotal" Width="150" Text="{Binding Total, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
