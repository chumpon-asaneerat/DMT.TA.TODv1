<Window x:Class="Wpf.RabbitMQ.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Rabbit MQ Sample" 
        Height="450" 
        Width="800"
        Loaded="Window_Loaded"
        Unloaded="Window_Unloaded">
    <DockPanel LastChildFill="True" Margin="5">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
            <Button x:Name="cmdConnect" Margin="5" Content="Connect" Width="75" Click="cmdConnect_Click"/>
            <Button x:Name="cmdDisconnect" Margin="5" Content="Disconnet" Width="75" Click="cmdDisconnect_Click"/>
        </StackPanel>
        <Grid>
            <RichTextBox x:Name="txtMessages" Margin="5"/>
        </Grid>
    </DockPanel>
</Window>
